<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
<h1><%= @cocktail.name %></h1>

<br>
<div class="options">
<ul class="inlist"><li>
<%= link_to "add a ingredient", new_cocktail_dose_path(@cocktail), {class: "btn btn-primary"} %>
</li>
<%= link_to "edit a cocktail", edit_cocktail_path, {class: "btn btn-primary"} %>
</ul>
</div>
<ul>
        <% @cocktail.doses.each do |dose| %>

          <%= dose.description %> - <%= dose.ingredient.name %>

<%= link_to "destroy", dose_path(dose), method: :delete, data: {confirm: "are you sure"} %>

</ul>


                <% end %>

                <%= link_to "DESTROY the cocktail", cocktail_path(@cocktail), method: :delete%>
</div>
</div>
</div>
